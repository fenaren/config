# CSS-related environment variables
# MSSUSER is set in .cshrc
setenv MSSHOST   "css.larc.nasa.gov"
setenv MSSDOMAIN ".ndc.nasa.gov"

# Add shortcuts to different repositories on the dunkel SVN server
setenv EARLSVN    "svn://dantzig/EARL"
setenv DUNKELSVN  "http://dunkel.larc.nasa.gov/svn"
setenv GTMSVN     "$DUNKELSVN/GTM"
setenv ASROVSVN   "$DUNKELSVN/ASROV"
setenv BVRSVN     "$DUNKELSVN/BVR"
setenv FSSBSVN    "https://ed-svn.ndc.nasa.gov/svn/FSSB-SWEngineering"

# Add Gitlab shortcut environment variables
setenv GITLAB $HOME/gitlab
setenv AEONCOMMON  $GITLAB/aeoncommon
setenv AEONUTIL    $GITLAB/aeonutil
setenv AEONDDS     $GITLAB/aeondds
setenv AEONVEHICLE $GITLAB/aeonvehicle

setenv CMAKE_ROOT ~/cmake/cmake-3.11.1-Linux-x86_64

# Set the SMTP server to use for various things
setenv SMTP_RELAY smtp.larc.nasa.gov

# Set my email address
setenv EMAIL leigh.s.garbs@nasa.gov

# Where are the vobs?
setenv BASEPATH /vobs

# What is the IP address of my VM?
setenv VMIP 172.16.88.129

if ( `echo $PATH | grep -c ~/bin/linux` == 0 ) then
  setenv PATH ~/bin/linux:${PATH}
endif

if ( `echo $PATH | grep -c ~/bin/work` == 0 ) then
  setenv PATH ~/bin/work:${PATH}
endif

if ( `echo $PATH | grep -c ~/subversion` == 0 ) then
  setenv PATH ~/subversion/subversion-1.9.4/out/bin:${PATH}
endif

if ( `echo $PATH | grep -c ~/cmake` == 0 ) then
  setenv PATH ~/cmake/cmake-3.11.1-Linux-x86_64/bin:${PATH}
endif

